div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Users platform

    div#navbar-main.navbar-collapse.collapse(uib-collapse='nav.isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in nav.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}
        li(ng-show='nav.authService.isAuthed()', ui-sref-active='active')
          a(ui-sref='users') Users
      ul.nav.navbar-nav.navbar-right

        li(ng-hide='nav.authService.isAuthed()', ui-sref-active='active')
          a(ui-sref='login') Login

        li(ng-show='nav.authService.isAuthed()')
          a(ng-click="nav.logOut()", href="#") Logout
